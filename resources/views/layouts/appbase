Gửi mail
$update = PostponeApplication::create($request->all());
if($request->submit_num != 1)
{
    if($update){

        $title = 'NEW POSTPONE APPLICATION';

        // Lấy teacher id trong bảng request
        $teach = $request->teach_id;
        //
        $get_email = User::where('id',$teach)->pluck('email')->toArray();

        // Select tên user có role là giảng viên từ bảng user
        $teach_name = User::where('id',$teach)->pluck('name')->toArray();

        // Lấy id đơn mới nhất vừa gửi
        $id_don_moi_nhat = $request->id_don;

        // Địa chỉ truy cập duyệt đơn + id đơn sinh viên vừa submit
        $url = route('edit.request',$id_don_moi_nhat);


        // Compact link qua view email
        $link = $url;


        Mail::send('email.layout_admin',compact('link','title'), function ($email) use ($teach_name, $get_email) {
            // Gui den email nao, ten cua chu so huu email do la ai
            $email->subject('Có đơn mới');
            $email->to($get_email,$teach_name);
        });

        Alert()->success('AAAAAAAAAAAAAAA');
        }
        else{
            Alert()->error('Có lỗi xảy ra');
        }
    } else{

        $add = PostponeApplication::create($request->all());

        if($add){
            Alert()->success('Đơn đã được gửi');
        }
        else{
            Alert()->error('Có lỗi xảy ra');
        }


    $title = 'NEW POSTPONE APPLICATION';

    // Lấy teacher id trong bảng request
    $teach = $request->teach;
    //
    $get_email = User::where('id',$teach)->pluck('email')->toArray();

    // Select tên user có role là giảng viên từ bảng user
    $teach_name = User::where('id',$teach)->pluck('name')->toArray();

    // Lấy id đơn mới nhất vừa gửi
    $id_don_moi_nhat = $add->id;

    // Địa chỉ truy cập duyệt đơn + id đơn sinh viên vừa submit
    $url = route('edit.request',$id_don_moi_nhat);


    // Compact link qua view email
    $link = $url;
    Mail::send('email.layout_admin',compact('link','title'), function ($email) use ($teach_name, $get_email) {
        // Gui den email nao, ten cua chu so huu email do la ai
        $email->subject('Có đơn mới');
        $email->to($get_email,$teach_name);
    });}